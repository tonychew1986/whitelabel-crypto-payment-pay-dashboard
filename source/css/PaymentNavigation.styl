.paymentNavigation
  .paymentNavigationLogo
    float left
    padding 13px 20px

    .paymentNavigationLogoImage
      float left
      padding-right 30px

      img
        height 43px

    .paymentNavigationNetwork
      float left
      display none
      padding 10px 15px
      text-align left
      color #777
      font-size 14px
      font-weight bold
      text-transform uppercase
      background-color rgba(0,0,0,0.1)
      border-radius 2px

      .paymentNavigationNetworkTitle
        color #444
        font-size 10px

  .paymentNavigationActions
    float right
    padding 13px 20px

    .paymentNavigationActionsMenu
      float left
      display none

    .paymentNavigationActionsDesktop
      float left

      .paymentNavigationActionsCurrency
        float left
        padding 0px 35px

        .paymentNavigationActionsCurrencyTitle
          float left
          padding-right 10px
          margin-top 10px
          font-weight bold

        .paymentNavigationActionsCurrencySelect
          float left
          min-width 220px

      .paymentNavigationActionsAccess
        float left


@media screen and (max-width: 720px)
  .paymentNavigation
    .paymentNavigationActions
      .paymentNavigationActionsMenu
        display block

      .paymentNavigationActionsDesktop
        display none
